# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Tasks          
# GET     /tasks                  controllers.Application.tasks
# POST    /tasks                  controllers.Application.newTask
# POST    /tasks/:id/delete       controllers.Application.deleteTask(id: Long)

# Tasks          
GET     /iris                  		controllers.Application.iris
POST    /iris                  		controllers.Application.newIRI
POST    /iris/:id/delete       		controllers.Application.deleteIRI(id: Long)

GET     /langs                  		controllers.Application.languages
POST    /langs                  		controllers.Application.newLang
POST    /langs/:id/delete       		controllers.Application.deleteLang(id: Long)

GET     /trans                  		controllers.Application.translations
POST    /trans                  		controllers.Application.newTrans
POST    /trans/:id/delete       		controllers.Application.deleteTrans(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
